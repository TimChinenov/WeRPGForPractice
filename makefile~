




CXX:= g++

CXXFLAGS :=
CPPFLAGS :=

#File Directories
SRC_DIR := src/
OBJ_DIR := build/
DES_DIR := test/

#File names
EXECUTABLE := TextRPG

FIL := action item testMain character main stat

SRC := $(addsuffix .cpp,$(addprefix $(SRC_DIR), $(FIL)))
OBJ := $(addsuffix .o,$(addprefix $(OBJ_DIR), $(FIL)))
EXE_FIL := $(addprefix $(DES_DIR), $(EXECUTABLE))


all: $(OBJ)
	$(CXX) $(OBJ) $(CXXFLAGS) $(EXE_FIL)

clean:
	rm -f $(EXE_FIL) $(OBJ)
